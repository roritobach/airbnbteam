<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3"><h2>Forgot your password?</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.email_field :email, required: true, autofocus: true %>
  <%= f.submit "Send me reset password instructions" %>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>

